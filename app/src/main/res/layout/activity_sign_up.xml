<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".SignUpActivity">


                <TextView
                    android:id="@+id/sign_bug"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="#03A9F4"
                    android:gravity="center"
                    android:text="@string/title"
                    android:textColor="#FFC107"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/ed1_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="80dp"
                    android:ems="10"
                    android:hint="你的姓名"
                    android:inputType="textPersonName"
                    android:maxLength="5"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/sign_bug"
                    tools:ignore="Autofill,HardcodedText,MissingConstraints" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="姓名："
                    app:layout_constraintBottom_toBottomOf="@+id/ed1_signup"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ed1_signup"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/ed2_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="XMUT_学号"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/ed1_signup"
                    app:layout_constraintStart_toStartOf="@+id/ed1_signup"
                    app:layout_constraintTop_toBottomOf="@+id/ed1_signup"
                    tools:ignore="Autofill,HardcodedText" />

                <EditText
                    android:id="@+id/ed3_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="你的QQ账号"
                    android:inputType="textPersonName"
                    android:maxLength="11"
                    app:layout_constraintEnd_toEndOf="@+id/ed2_signup"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/ed2_signup"
                    app:layout_constraintTop_toBottomOf="@+id/ed7_signup"
                    tools:ignore="Autofill,HardcodedText" />

                <EditText
                    android:id="@+id/ed4_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="你的联系电话"
                    android:inputType="textPersonName"
                    android:maxLength="11"
                    app:layout_constraintEnd_toEndOf="@+id/ed3_signup"
                    app:layout_constraintStart_toStartOf="@+id/ed3_signup"
                    app:layout_constraintTop_toBottomOf="@+id/ed3_signup"
                    tools:ignore="Autofill,HardcodedText" />

                <EditText
                    android:id="@+id/ed5_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    app:layout_constraintEnd_toEndOf="@+id/ed4_signup"
                    app:layout_constraintStart_toStartOf="@+id/ed4_signup"
                    app:layout_constraintTop_toBottomOf="@+id/ed4_signup"
                    tools:ignore="Autofill,HardcodedText" />

                <EditText
                    android:id="@+id/ed6_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    app:layout_constraintEnd_toEndOf="@+id/ed5_signup"
                    app:layout_constraintStart_toStartOf="@+id/ed5_signup"
                    app:layout_constraintTop_toBottomOf="@+id/ed5_signup"
                    tools:ignore="Autofill,HardcodedText" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="学号："
                    app:layout_constraintBottom_toBottomOf="@+id/ed2_signup"
                    app:layout_constraintEnd_toStartOf="@+id/ed2_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed2_signup"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="QQ："
                    app:layout_constraintBottom_toBottomOf="@+id/ed3_signup"
                    app:layout_constraintEnd_toStartOf="@+id/ed3_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed3_signup"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="电话："
                    app:layout_constraintBottom_toBottomOf="@+id/ed4_signup"
                    app:layout_constraintEnd_toStartOf="@+id/ed4_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed4_signup"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="密码："
                    app:layout_constraintBottom_toBottomOf="@+id/ed5_signup"
                    app:layout_constraintEnd_toStartOf="@+id/ed5_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed5_signup"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="确认密码："
                    app:layout_constraintBottom_toBottomOf="@+id/ed6_signup"
                    app:layout_constraintEnd_toStartOf="@+id/ed6_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed6_signup"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/signup_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:text="确认注册"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed6_signup"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/status7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ed7_signup"
                    app:layout_constraintStart_toEndOf="@+id/ed1_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed7_signup"
                    app:srcCompat="@android:drawable/presence_online" />

                <ImageView
                    android:id="@+id/status2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ed2_signup"
                    app:layout_constraintStart_toEndOf="@+id/ed1_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed2_signup"
                    app:srcCompat="@android:drawable/presence_online" />

                <ImageView
                    android:id="@+id/status3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ed3_signup"
                    app:layout_constraintStart_toEndOf="@+id/ed1_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed3_signup"
                    app:srcCompat="@android:drawable/presence_online" />

                <ImageView
                    android:id="@+id/status4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ed4_signup"
                    app:layout_constraintStart_toEndOf="@+id/ed1_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed4_signup"
                    app:srcCompat="@android:drawable/presence_online" />

                <ImageView
                    android:id="@+id/status5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ed5_signup"
                    app:layout_constraintStart_toEndOf="@+id/ed1_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed5_signup"
                    app:srcCompat="@android:drawable/presence_online" />

                <ImageView
                    android:id="@+id/status6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ed6_signup"
                    app:layout_constraintStart_toEndOf="@+id/ed1_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed6_signup"
                    app:srcCompat="@android:drawable/presence_online" />

                <ImageView
                    android:id="@+id/status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/ed1_signup"
                    app:layout_constraintStart_toEndOf="@+id/ed1_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed1_signup"
                    app:srcCompat="@android:drawable/presence_online" />

                <EditText
                    android:id="@+id/ed7_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:ems="10"
                    android:hint="输入你的专业"
                    android:inputType="textPersonName"
                    android:maxLength="10"
                    app:layout_constraintEnd_toEndOf="@+id/ed2_signup"
                    app:layout_constraintStart_toStartOf="@+id/ed2_signup"
                    app:layout_constraintTop_toBottomOf="@+id/ed2_signup" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="专业："
                    app:layout_constraintBottom_toBottomOf="@+id/ed7_signup"
                    app:layout_constraintEnd_toStartOf="@+id/ed7_signup"
                    app:layout_constraintTop_toTopOf="@+id/ed7_signup" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>