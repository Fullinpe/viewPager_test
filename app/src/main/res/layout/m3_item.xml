    <TextView
        android:id="@+id/m3_major_name_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17---"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/num_m3_i"
        app:layout_constraintStart_toStartOf="@+id/num_m3_i"
        app:layout_constraintTop_toTopOf="@+id/name_m3_i" />

    <TextView
        android:id="@+id/m3_accept_num_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/po_image1"
        app:layout_constraintEnd_toStartOf="@+id/po_image1"
        app:layout_constraintTop_toTopOf="@+id/po_image1" />


</androidx.constraintlayout.widget.ConstraintLayout>
